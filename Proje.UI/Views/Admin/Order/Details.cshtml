@model Proje.UI.Models.DTOs.OrderDTO
@{
    ViewData["Title"] = "Sipariş Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sipariş #@Model.Id</h1>
    <a href="/Admin/Order" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Listeye Dön
    </a>
</div>

<div class="row">
    <!-- Sipariş Bilgileri -->
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Sipariş Bilgileri</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">Sipariş #@Model.Id</div>
                        <div class="my-2">
                            <p><strong>Tarih:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
                            <p><strong>Müşteri:</strong> @Model.UserId</p>
                            <p>
                                <strong>Durum:</strong>
                                <span class="badge badge-@(Model.Status == "Teslim Edildi" ? "success" : 
                                                        Model.Status == "İptal Edildi" ? "danger" : 
                                                        Model.Status == "Kargoya Verildi" ? "primary" : 
                                                        Model.Status == "İşleniyor" ? "info" : "warning")">
                                    @Model.Status
                                </span>
                            </p>
                            <p>
                                <strong>Ödeme Durumu:</strong>
                                <span class="badge badge-@(Model.IsPaid ? "success" : "warning")">
                                    @(Model.IsPaid ? "Ödendi" : "Ödenmedi")
                                </span>
                            </p>
                            <p><strong>Ödeme Yöntemi:</strong> @Model.PaymentMethod</p>
                            @if (Model.IsPaid && Model.PaymentDate.HasValue)
                            {
                                <p><strong>Ödeme Tarihi:</strong> @Model.PaymentDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                            }
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Teslimat Bilgileri -->
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Teslimat Bilgileri</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">Adres</div>
                        <div class="my-2">
                            <p>@Model.Address</p>
                            <p>@Model.PostalCode @Model.City / @Model.Country</p>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-home fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ödeme Özeti -->
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Ödeme Özeti</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">Toplam: @Model.TotalAmount.ToString("C2")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-money-bill-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sipariş Öğeleri -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sipariş Öğeleri</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ürün ID</th>
                        <th>Ürün Adı</th>
                        <th>Birim Fiyat</th>
                        <th>Miktar</th>
                        <th>Ara Toplam</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.OrderItems != null && Model.OrderItems.Any())
                    {
                        foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.ProductName</td>
                                <td>@item.UnitPrice.ToString("C2")</td>
                                <td>@item.Quantity</td>
                                <td>@item.Subtotal.ToString("C2")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">Sipariş öğesi bulunamadı.</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-right"><strong>Toplam:</strong></td>
                        <td><strong>@Model.TotalAmount.ToString("C2")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Durum Güncelleme -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sipariş Durumu Güncelle</h6>
    </div>
    <div class="card-body">
        <form id="updateStatusForm">
            <input type="hidden" id="orderId" value="@Model.Id">
            <div class="form-group">
                <label for="orderStatus">Yeni Durum</label>
                <select class="form-control" id="orderStatus">
                    <option value="Beklemede" @(Model.Status == "Beklemede" ? "selected" : "")>Beklemede</option>
                    <option value="İşleniyor" @(Model.Status == "İşleniyor" ? "selected" : "")>İşleniyor</option>
                    <option value="Kargoya Verildi" @(Model.Status == "Kargoya Verildi" ? "selected" : "")>Kargoya Verildi</option>
                    <option value="Teslim Edildi" @(Model.Status == "Teslim Edildi" ? "selected" : "")>Teslim Edildi</option>
                    <option value="İptal Edildi" @(Model.Status == "İptal Edildi" ? "selected" : "")>İptal Edildi</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        $('#updateStatusForm').on('submit', function(e) {
            e.preventDefault();
            
            let orderId = $('#orderId').val();
            let newStatus = $('#orderStatus').val();
            
            $.ajax({
                url: '/Admin/Order/UpdateStatus/' + orderId,
                type: 'POST',
                data: { status: newStatus },
                dataType: 'json',
                success: function(response) {
                    if (response.success) {
                        alert('Sipariş durumu başarıyla güncellendi.');
                        location.reload();
                    } else {
                        alert('Sipariş durumu güncellenirken bir hata oluştu: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    alert('Sipariş durumu güncellenirken bir hata oluştu: ' + error);
                }
            });
        });
    });
</script>
}