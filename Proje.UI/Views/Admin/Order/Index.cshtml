@{
    ViewData["Title"] = "Siparişler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Siparişler</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sipariş Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="orderTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sipariş #</th>
                        <th>Tarih</th>
                        <th>Müşteri</th>
                        <th>Toplam Tutar</th>
                        <th>Durum</th>
                        <th>Ödeme Durumu</th>
                        <th>İşlemler
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Siparişler AJAX ile yüklenecek -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Sipariş Durumu Güncelleme Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Sipariş Durumu Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="orderId">
                <div class="form-group">
                    <label for="orderStatus">Sipariş Durumu</label>
                    <select class="form-control" id="orderStatus">
                        <option value="Beklemede">Beklemede</option>
                        <option value="İşleniyor">İşleniyor</option>
                        <option value="Kargoya Verildi">Kargoya Verildi</option>
                        <option value="Teslim Edildi">Teslim Edildi</option>
                        <option value="İptal Edildi">İptal Edildi</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="updateStatus">Güncelle</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadOrders();

            function loadOrders() {
                $.ajax({
                    url: '/Admin/Order/List',
                    type: 'GET',
                    dataType: 'json',
                    success: function(response) {
                        if (response.success) {
                            let tableBody = '';
                            $.each(response.data, function(index, order) {
                                const orderDate = new Date(order.orderDate).toLocaleDateString('tr-TR');

                                // Durum badge rengi
                                let statusBadge;
                                switch(order.status) {
                                    case 'Beklemede':
                                        statusBadge = 'warning';
                                        break;
                                    case 'İşleniyor':
                                        statusBadge = 'info';
                                        break;
                                    case 'Kargoya Verildi':
                                        statusBadge = 'primary';
                                        break;
                                    case 'Teslim Edildi':
                                        statusBadge = 'success';
                                        break;
                                    case 'İptal Edildi':
                                        statusBadge = 'danger';
                                        break;
                                    default:
                                        statusBadge = 'secondary';
                                }

                                tableBody += `
                                    <tr>
                                        <td>#${order.id}</td>
                                        <td>${orderDate}</td>
                                        <td>${order.userId}</td>
                                        <td>${order.totalAmount.toFixed(2)} ₺</td>
                                        <td>
                                            <span class="badge badge-${statusBadge}">
                                                ${order.status}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge badge-${order.isPaid ? 'success' : 'warning'}">
                                                ${order.isPaid ? 'Ödendi' : 'Ödenmedi'}
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/Admin/Order/Details/${order.id}" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button class="btn btn-primary btn-sm update-status" data-id="${order.id}" data-status="${order.status}">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                `;
                            });

                            $('#orderTable tbody').html(tableBody);

                            // Datatables initialization
                            if ($.fn.DataTable.isDataTable('#orderTable')) {
                                $('#orderTable').DataTable().destroy();
                            }

                            $('#orderTable').DataTable({
                                language: {
                                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json'
                                },
                                order: [[0, 'desc']] // En son siparişten sırala
                            });
                        } else {
                            alert('Siparişler yüklenirken bir hata oluştu: ' + response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('Siparişler yüklenirken bir hata oluştu: ' + error);
                    }
                });
            }

            // Sipariş durumu güncelleme modal
            $(document).on('click', '.update-status', function() {
                let orderId = $(this).data('id');
                let currentStatus = $(this).data('status');

                $('#orderId').val(orderId);
                $('#orderStatus').val(currentStatus);
                $('#statusModal').modal('show');
            });

            // Sipariş durumu güncelleme işlemi
            $('#updateStatus').on('click', function() {
                let orderId = $('#orderId').val();
                let newStatus = $('#orderStatus').val();

                $.ajax({
                    url: '/Admin/Order/UpdateStatus/' + orderId,
                    type: 'POST',
                    data: { status: newStatus },
                    dataType: 'json',
                    success: function(response) {
                        if (response.success) {
                            alert('Sipariş durumu başarıyla güncellendi.');
                            $('#statusModal').modal('hide');
                            loadOrders();
                        } else {
                            alert('Sipariş durumu güncellenirken bir hata oluştu: ' + response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('Sipariş durumu güncellenirken bir hata oluştu: ' + error);
                    }
                });
            });
        });
    </script>
}