@model IEnumerable<Proje.UI.Models.DTOs.OrderDTO>
@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>Siparişlerim</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Sipariş Geçmişi</h5>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Sipariş #</th>
                                    <th>Tarih</th>
                                    <th>Toplam Tutar</th>
                                    <th>Ödeme Durumu</th>
                                    <th>Sipariş Durumu</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>#@order.Id</td>
                                        <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@order.TotalAmount.ToString("C2")</td>
                                        <td>
                                            @if (order.IsPaid)
                                            {
                                                <span class="badge badge-success">Ödendi</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">Ödenmedi</span>
                                            }
                                        </td>
                                        <td>
                                            @switch (order.Status)
                                            {
                                                case "Beklemede":
                                                    <span class="badge badge-warning">Beklemede</span>
                                                    break;
                                                case "İşleniyor":
                                                    <span class="badge badge-info">İşleniyor</span>
                                                    break;
                                                case "Kargoya Verildi":
                                                    <span class="badge badge-primary">Kargoya Verildi</span>
                                                    break;
                                                case "Teslim Edildi":
                                                    <span class="badge badge-success">Teslim Edildi</span>
                                                    break;
                                                case "İptal Edildi":
                                                    <span class="badge badge-danger">İptal Edildi</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-secondary">@order.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Detaylar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        Henüz hiç siparişiniz bulunmamaktadır. <a href="@Url.Action("Index", "Product")">Alışverişe başlayın</a>.
                    </div>
                }
            </div>
        </div>
    </div>
</div>