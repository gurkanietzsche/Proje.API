@model Proje.UI.Models.DTOs.ProductDTO
@{
    ViewData["Title"] = Model.Name;
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product")">Ürünler</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product", new { categoryId = Model.CategoryId })">@Model.CategoryName</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <!-- Ürün Resmi -->
    <div class="col-md-5 mb-4">
        <!-- Ürün Resmi -->
        <div class="col-md-5 mb-4">
            <div class="card border-0">
                <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Name">
            </div>
        </div>

        <!-- Ürün Bilgileri -->
        <div class="col-md-7">
            <h2 class="mb-3">@Model.Name</h2>
            <p class="text-muted">Kategori: @Model.CategoryName</p>

            <h3 class="text-success font-weight-bold mb-4">@Model.Price.ToString("C2")</h3>

            <p>
                Stok Durumu:
                @if (Model.Stock > 0)
                {
                    <span class="badge badge-success">Stokta var</span>
                    <span class="ml-2">@Model.Stock adet</span>
                }
                else
                {
                    <span class="badge badge-danger">Stokta yok</span>
                }
            </p>

            <div class="mb-4">
                <h5>Ürün Açıklaması</h5>
                <p>@Model.Description</p>
            </div>

            @if (Model.Stock > 0)
            {
                <div class="form-group">
                    <label for="quantity">Adet</label>
                    <input type="number" id="quantity" class="form-control w-25" value="1" min="1" max="@Model.Stock">
                </div>

                <button id="add-to-cart" class="btn btn-lg btn-success" data-id="@Model.Id">
                    <i class="fas fa-shopping-cart mr-2"></i> Sepete Ekle
                </button>
            }
            else
            {
                <button class="btn btn-lg btn-secondary" disabled>
                    <i class="fas fa-times mr-2"></i> Stokta Yok
                </button>
            }
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function() {
                $('#add-to-cart').on('click', function() {
                    var productId = $(this).data('id');
                    var quantity = $('#quantity').val();

                    $.ajax({
                        url: '/Cart/AddToCart',
                        type: 'POST',
                        data: { productId: productId, quantity: quantity },
                        success: function(response) {
                            if (response.success) {
                                alert('Ürün sepete eklendi!');
                            } else {
                                alert('Ürün sepete eklenirken bir hata oluştu: ' + response.message);
                            }
                        },
                        error: function(xhr, status, error) {
                            if (xhr.status === 401) {
                                // Kullanıcı giriş yapmamış
                                if (confirm('Bu işlemi gerçekleştirmek için giriş yapmanız gerekmektedir. Giriş sayfasına yönlendirilmek ister misiniz?')) {
                                    window.location.href = '/Account/Login';
                                }
                            } else {
                                alert('Ürün sepete eklenirken bir hata oluştu: ' + error);
                            }
                        }
                    });
                });
            });
        </script>
    }
